{% extends 'base.html.twig' %}

{% block title %}Armes{% endblock %}

{% block monTitre %}
Les armes
{% endblock %}

{% block body %}
<table class="table">

    {% for arme in armes %}
    <tr>
        <td><a href="{{ path('afficher_arme', {'nom' : arme.nom|replace({'é':'e'})}) }}"> <img src="{{ asset('images/armes/' ~ arme.nom|replace({'é':'e'}) ~ '.png') }}" alt=""> </a></td>
        <td>{{ arme.nom }}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}